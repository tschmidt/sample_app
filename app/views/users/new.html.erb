<%- provide :title, t('forms.users.new.title') -%>
<h1><%= t('forms.users.new.title') %></h1>

<div class='row'>
  <div class='span6 offset3'>
    <%= simple_form_for(@user, :html => {:class => 'form-horizontal' }) do |form| %>
      <%= form.input :name %>
      <%= form.input :email %>
      <%= form.input :password %>
      <%= form.input :password_confirmation %>
      <%= form.button :wrapped, cancel: root_path, value: t('forms.users.new.button') %>
    <%- end -%>
  </div>
</div>